{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./src_typescript_compiled",
    "target": "es6",
    "lib": [
      "es6",
      "ES2019",
      "DOM"
    ],
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "moduleResolution": "node"
  },
  "include": [
    "src_backend/**/*.ts",
    "src_frontend/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}